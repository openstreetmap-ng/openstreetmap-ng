{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "*.js",
      "**/*.ts",
      "**/*.json",
      "!app/views/lib/timezone-bbox.ts",
      "!app/views/lib/vector-styles/*",
      "!config/wiki_pages.json"
    ]
  },
  "formatter": {
    "formatWithErrors": true,
    "lineWidth": 88,
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "rules": {
      "complexity": {
        "noForEach": "on",
        "noUselessStringConcat": "on",
        "noVoid": "on",
        "useWhile": "on"
      },
      "nursery": {
        "noUselessUndefined": "on"
      },
      "performance": {
        "noAwaitInLoops": "on",
        "noDelete": "on",
        "useTopLevelRegex": "on"
      },
      "recommended": true,
      "style": {
        "noCommonJs": "on",
        "noInferrableTypes": "on",
        "noNamespace": "on",
        "noSubstr": "on",
        "noUnusedTemplateLiteral": "on",
        "useCollapsedElseIf": "on",
        "useConsistentArrayType": "on",
        "useConsistentBuiltinInstantiation": "on",
        "useForOf": "on",
        "useNumberNamespace": "on",
        "useObjectSpread": "on",
        "useShorthandAssign": "on",
        "useThrowNewError": "on",
        "useThrowOnlyError": "on"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noConstantBinaryExpressions": "on",
        "noEvolvingTypes": "on",
        "noExplicitAny": "off",
        "useAwait": "on"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  }
}
