{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "!app/views/lib/timezone-bbox.ts",
      "!app/views/lib/vector-styles/*",
      "!config/aaguid.json",
      "!config/wiki_pages.json"
    ]
  },
  "formatter": {
    "attributePosition": "multiline",
    "formatWithErrors": true,
    "lineWidth": 88,
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "enabled": false
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  }
}
