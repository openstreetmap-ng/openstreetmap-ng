<div class="content-header pb-5">
    <div class="col-lg-10 offset-lg-1 col-xl-8 offset-xl-2 col-xxl-6 offset-xxl-3">
        <div class="row g-0">
            <div class="col-md-6 landing-image">
                <img src="/static/img/about/map.webp" alt="{{ t('alt.map_layers_art') }}" draggable="false">
                <span class="attribution fs-4">Â© {{ t('javascripts.map.openstreetmap_contributors') }}</span>
            </div>
            <div class="col-md-6 landing-text">
                <h2 class="fw-light">
                    {% set name %}
                    <span class="text-nowrap">
                        <img class="me-1-5" src="/static/img/favicon/256.webp"
                            alt="{{ t('alt.logo', name=t('project_name')) }}" draggable="false">
                        <b class="vibrant fw-semibold">{{ t('project_name') }}</b>
                    </span>
                    {% endset %}
                    {{ t('site.about.used_by_html', name=name) | safe }}
                </h2>
            </div>
        </div>

        <div class="header-body">
            <p class="lead mb-4">{{ t('site.about.lede_text') }}</p>

            <h3>
                <i class="bi bi-house-door-fill"></i>
                {{ t('site.about.local_knowledge_title') }}
            </h3>
            <p>{{ t('site.about.local_knowledge_html') }}</p>

            <h3>
                <i class="bi bi-people-fill"></i>
                {{ t('site.about.community_driven_title') }}
            </h3>
            <p>
                {% set osm_blog_link %}
                <a href="https://blog.openstreetmap.org">
                    {{- t('site.about.community_driven_osm_blog') -}}
                </a>
                {%- endset %}
                {% set user_diaries_link %}
                <a href="/diary">
                    {{- t('site.about.community_driven_user_diaries') -}}
                </a>
                {%- endset %}
                {% set community_blogs_link %}
                <a href="https://blogs.openstreetmap.org">
                    {{- t('site.about.community_driven_community_blogs') -}}
                </a>
                {%- endset %}
                {% set osm_foundation_link %}
                <a href="https://osmfoundation.org">
                    {{- t('site.about.community_driven_osm_foundation') -}}
                </a>
                {%- endset %}
                {{ t(
                    'site.about.community_driven_1_html',
                    osm_blog_link=osm_blog_link,
                    user_diaries_link=user_diaries_link,
                    community_blogs_link=community_blogs_link,
                    osm_foundation_link=osm_foundation_link
                ) | safe }}
            </p>

            <h3>
                <span class="icon-symbol copyright"></span>
                {{ t('site.about.open_data_title') }}
            </h3>
            <p>
                {% set open_data %}<i>{{ t('site.about.open_data_open_data') }}</i>{% endset %}
                {% set copyright_license_link %}
                <a href="/copyright" rel="license">
                    {{- t('site.about.open_data_copyright_license') -}}
                </a>
                {%- endset %}
                {{ t(
                    'site.about.open_data_1_html',
                    open_data=open_data,
                    copyright_license_link=copyright_license_link
                ) | safe }}
            </p>

            <h3>
                <span class="icon-symbol section"></span>
                {{ t('site.about.legal_title') }}
            </h3>
            <p>
                {% set openstreetmap_foundation_link %}
                <a href="https://osmfoundation.org">
                    {{- t('site.about.legal_1_1_openstreetmap_foundation') -}}
                </a>
                {%- endset %}
                {% set terms_of_use_link %}
                <a href="https://osmfoundation.org/wiki/Terms_of_Use" rel="terms-of-service">
                    {{- t('layouts.tou') -}}
                </a>
                {%- endset %}
                {% set aup_link %}
                <a href="https://wiki.openstreetmap.org/wiki/Acceptable_Use_Policy">
                    {{- t('site.about.legal_1_1_aup') -}}
                </a>
                {%- endset %}
                {% set privacy_policy_link %}
                <a href="https://osmfoundation.org/wiki/Privacy_Policy" rel="privacy-policy">
                    {{- t('users.new.privacy_policy') | title -}}
                </a>
                {%- endset %}
                {{ t(
                    'site.about.legal_1_1_html',
                    openstreetmap_foundation_link=openstreetmap_foundation_link,
                    terms_of_use_link=terms_of_use_link,
                    aup_link=aup_link,
                    privacy_policy_link=privacy_policy_link
                ) | safe }}
            </p>
            <p>
                {% set trademark_policy_link %}
                <a href="https://osmfoundation.org/wiki/Trademark_Policy">
                    {{- t('site.copyright.legal_babble.trademarks_1_1_trademark_policy') -}}
                </a>
                {%- endset %}
                {{ t(
                    'site.copyright.legal_babble.trademarks_1_1_html',
                    trademark_policy_link=trademark_policy_link
                ) | safe }}
            </p>
            <p>
                {% set contact_the_osmf_link %}
                <a href="https://osmfoundation.org/wiki/Contact">
                    {{- t('site.about.legal_2_1_contact_the_osmf') -}}
                </a>
                {%- endset %}
                {{ t(
                    'site.about.legal_2_1_html',
                    contact_the_osmf_link=contact_the_osmf_link
                ) | safe }}
            </p>

            <h3>
                <i class="bi bi-heart-fill"></i>
                {{ t('site.about.partners_title') }}
            </h3>
            <p class="mb-0">
                {% set ucl %}
                <a href="https://www.ucl.ac.uk">
                    {{- t('layouts.partners_ucl') -}}
                </a>
                {%- endset %}
                {% set fastly %}
                <a href="https://www.fastly.com">
                    {{- t('layouts.partners_fastly') -}}
                </a>
                {%- endset %}
                {% set bytemark %}
                <a href="https://www.bytemark.co.uk">
                    {{- t('layouts.partners_bytemark') -}}
                </a>
                {%- endset %}
                {% set partners %}
                <a href="https://hardware.openstreetmap.org/thanks/">
                    {{- t('layouts.partners_partners') -}}
                </a>
                {%- endset %}
                {{ t(
                    'layouts.hosting_partners_html',
                    ucl=ucl,
                    fastly=fastly,
                    bytemark=bytemark,
                    partners=partners
                ) | safe }}
            </p>
        </div>
    </div>
</div>
