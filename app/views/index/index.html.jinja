{% extends '_base' %}
{% block head %}

{% set description = t('layouts.intro_text') %}
<meta name="description" content="{{ description }}">
<meta property="og:description" content="{{ description }}">

{% endblock %}
{% block body_class %}map-body{% endblock %}
{% block body %}

<div class="main-map-container">
    <div class="sidebar sidebar-overlay">
        <div id="SearchForm"></div>

        <div class="action-sidebar index d-none" data-sidebar-overlay="1"></div>
        <div class="action-sidebar changeset d-none"></div>
        <div class="action-sidebar changesets-history d-none"></div>
        <div class="action-sidebar distance d-none" data-sidebar-overlay="1"></div>
        <div class="action-sidebar element d-none"></div>
        <div class="action-sidebar element-history d-none"></div>
        <div class="action-sidebar export d-none"></div>
        <div class="action-sidebar new-note d-none"></div>
        <div class="action-sidebar note d-none"></div>
        <div class="action-sidebar query-features d-none"></div>
        <div class="action-sidebar routing d-none"></div>
        {% include 'index/search' %}
    </div>

    <div class="main-map">
        <div class="map-alert-container">
            {% include 'index/alert/data-layer' %}
            {% include 'index/alert/search' %}
        </div>
    </div>

    <div class="sidebar">
        {% include 'index/sidebar/layers' %}
        {% include 'index/sidebar/legend' %}
        {% include 'index/sidebar/share' %}
    </div>
</div>

{% include 'index/context-menu' %}

{% endblock %}
