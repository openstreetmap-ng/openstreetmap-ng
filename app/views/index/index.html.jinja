{% extends '_base' %}
{% block head %}

{% set description = t('layouts.intro_text') %}
<meta name="description" content="{{ description }}">
<meta property="og:description" content="{{ description }}">

{% endblock %}
{% block body_class %}map-body{% endblock %}
{% block body %}

<div class="main-map-container">
    <div class="sidebar sidebar-overlay">
        <div id="SearchForm"></div>

        <div class="action-sidebar index" data-sidebar-overlay="1" hidden></div>
        <div class="action-sidebar changeset" hidden></div>
        <div class="action-sidebar changesets-history" hidden></div>
        <div class="action-sidebar distance" data-sidebar-overlay="1" hidden></div>
        <div class="action-sidebar element" hidden></div>
        <div class="action-sidebar element-history" hidden></div>
        <div class="action-sidebar export" hidden></div>
        <div class="action-sidebar new-note" hidden></div>
        <div class="action-sidebar note" hidden></div>
        <div class="action-sidebar query-features" hidden></div>
        <div class="action-sidebar routing" hidden></div>
        <div class="action-sidebar search" hidden></div>
    </div>

    <div class="main-map">
        <div id="MapAlerts"></div>
    </div>

    <div class="sidebar">
        <div class="map-sidebar layers" hidden></div>
        <div class="map-sidebar legend" hidden></div>
        <div class="map-sidebar share" hidden></div>
    </div>
</div>

{% include 'index/context-menu' %}

{% endblock %}
