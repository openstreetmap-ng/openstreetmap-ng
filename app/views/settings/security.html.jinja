{% extends 'settings/_base' %}
{% block title_prefix %}{{ t('settings.password_and_security') }} | {% endblock %}
{% block body_class %}settings-security-body{% endblock %}
{% block settings_active_href %}/settings/security{% endblock %}
{% block settings_title %}{{ t('settings.password_and_security') }}{% endblock %}
{% block settings_body %}

<h3 class="mb-3">{{ t('settings.change_password') }}</h3>
<form class="password-form" method="POST" action="/api/web/settings/password">
    <input type="text" class="d-none" name="display_name" value="{{ user.display_name }}" autocomplete="username">

    <label class="form-label d-block mb-3">
        <span class="required">{{ t('settings.current_password') }}</span>
        <input type="password" class="form-control mt-2" data-name="old_password" autocomplete="current-password"
            required>
    </label>

    <label class="form-label d-block mb-3">
        <span class="required">{{ t('settings.new_password') }}</span>
        <input type="password" class="form-control mt-2" data-name="new_password" minlength="{{ PASSWORD_MIN_LENGTH }}"
            autocomplete="new-password" required>
    </label>

    <label class="form-label d-block mb-3">
        <span class="required">{{ t('settings.new_password_repeat') }}</span>
        <input type="password" class="form-control mt-2" data-name="new_password_confirm"
            minlength="{{ PASSWORD_MIN_LENGTH }}" autocomplete="new-password" required>
    </label>

    <div class="row g-2 g-md-3 align-items-center">
        <div class="col-md">
            <div class="form-check ms-1">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="revoke_other_sessions" value="true"
                        autocomplete="off">
                    {{ t('settings.logout_from_browsers') }}
                </label>
            </div>
        </div>
        <div class="col-md-auto text-end">
            <a class="link-primary me-3" href="/reset-password">{{ t('sessions.new.lost password link') }}</a>
            <button class="btn btn-primary px-3" type="submit">
                {{ t('action.submit') }}
            </button>
        </div>
    </div>
</form>

<hr class="my-4">

<h3 class="mb-3">{{ t('settings.two_factor_auth') }}</h3>
<p class="text-muted mb-3">{{ t('settings.two_factor_auth_description') }}</p>

{% if has_totp %}
{# 2FA is enabled - show status and disable button #}
<div class="two-factor-status mb-3">
    <span class="badge bg-success">
        <i class="bi bi-shield-check"></i>
        {{ t('settings.two_factor_status_enabled') }}
    </span>
</div>

<button class="btn btn-outline-danger" type="button" data-bs-toggle="modal" data-bs-target="#disable2FAModal">
    {{ t('settings.disable_two_factor') }}
</button>

{# Disable 2FA Modal #}
<div class="modal fade" id="disable2FAModal" tabindex="-1" aria-labelledby="disable2FAModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="disable2FAModalLabel">{{ t('settings.disable_two_factor') }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="disable-totp-form" method="POST" action="/api/web/settings/totp/remove">
                <div class="modal-body">
                    <p>{{ t('settings.two_factor_remove_confirmation') }}</p>
                    <label class="form-label d-block">
                        <span class="required">{{ t('settings.two_factor_remove_password_required') }}</span>
                        <input type="password" class="form-control mt-2" name="password" autocomplete="current-password"
                            required>
                    </label>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ t('action.cancel') }}</button>
                    <button type="submit" class="btn btn-danger">{{ t('settings.disable_two_factor') }}</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% else %}
{# 2FA is not enabled - show setup button #}
<button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#setup2FAModal">
    {{ t('settings.enable_two_factor') }}
</button>

{# Setup 2FA Modal #}
<div class="modal fade" id="setup2FAModal" tabindex="-1" aria-labelledby="setup2FAModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="setup2FAModalLabel">{{ t('settings.two_factor_setup_title') }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="setup-totp-form" method="POST" action="/api/web/settings/totp/setup">
                <div class="modal-body">
                    <input type="hidden" name="secret" class="totp-secret-input">

                    <div class="mb-4">
                        <h6>{{ t('settings.two_factor_setup_step_1') }}</h6>
                        <p class="text-muted mb-3">{{ t('settings.two_factor_setup_step_1_description') }}</p>
                        <div class="qr-code-container text-center mb-3"></div>
                    </div>

                    <div class="mb-4">
                        <p class="text-muted mb-2">{{ t('settings.two_factor_setup_or_manual') }}</p>
                        <div class="secret-display p-3 bg-light rounded">
                            <small class="text-muted d-block mb-1">{{ t('settings.two_factor_setup_secret_label') }}</small>
                            <code class="totp-secret-display fs-6 user-select-all"></code>
                        </div>
                    </div>

                    <div>
                        <h6>{{ t('settings.two_factor_setup_step_2') }}</h6>
                        <p class="text-muted mb-3">{{ t('settings.two_factor_setup_step_2_description') }}</p>
                        <label class="form-label d-block">
                            <span class="required">{{ t('settings.two_factor_code_label') }}</span>
                            <input type="text" class="form-control mt-2 totp-code-input" name="code"
                                placeholder="{{ t('settings.two_factor_code_placeholder') }}"
                                pattern="[0-9]{6}" maxlength="6" inputmode="numeric" autocomplete="off" required>
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ t('action.cancel') }}</button>
                    <button type="submit" class="btn btn-primary">{{ t('settings.two_factor_verify_and_enable') }}</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endif %}

<hr class="my-4">

<h3>{{ t('settings.active_sessions') }}</h3>
<ul class="active-sessions list-unstyled">
    {% for session in active_sessions %}
    <li>
        <div class="row g-2 align-items-center">
            <div class="col-sm">
                <h6 class="mb-1">
                    {% if session.id == current_session_id %}
                    <span class="current-session me-1" data-bs-toggle="tooltip"
                        data-bs-title="{{ t('settings.this_is_your_current_session') }}"
                        aria-label="{{ t('settings.this_is_your_current_session') }}"></span>
                    {% endif %}
                    {% set id %}
                    <span class="session-id">
                        {{ str(session.id)[:5] }}
                        <i class="bi bi-three-dots"></i>
                        {{ str(session.id)[-7:] }}
                    </span>
                    {% endset %}
                    {{ t('settings.session_colon_id', id=id) | safe }}
                </h6>
                <p class="form-text mb-0">
                    {% set date %}
                    <time class="fw-medium" datetime="{{ session.authorized_at.isoformat() }}" data-date="long"
                        data-time="short"></time>
                    (<time datetime="{{ session.authorized_at.isoformat() }}" data-style="long"></time>)
                    {% endset %}
                    {{ t('settings.authorized_at', date=date) | safe }}
                </p>
            </div>
            <div class="col-sm-auto align-self-center text-end">
                <form class="revoke-token-form" method="POST" action="/api/web/settings/revoke-token">
                    <input type="hidden" name="token_id" value="{{ session.id }}">
                    <button class="btn btn-sm btn-light border" type="submit">
                        {{ t('action.end_session') }}
                    </button>
                </form>
            </div>
        </div>
    </li>
    {% endfor %}
</ul>

{% endblock %}
