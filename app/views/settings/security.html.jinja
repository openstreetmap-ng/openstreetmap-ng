{% extends 'settings/_base' %}
{% block title_prefix %}{{ t('settings.password_and_security') }} | {% endblock %}
{% block body_class %}settings-security-body{% endblock %}
{% block settings_active_href %}/settings/security{% endblock %}
{% block settings_title %}{{ t('settings.password_and_security') }}{% endblock %}
{% block settings_body %}

<h3 class="mb-3">{{ t('settings.change_password') }}</h3>
<form class="password-form" method="POST" action="/api/web/settings/password">
    <input type="text" class="d-none" name="display_name" value="{{ user.display_name }}" autocomplete="username">

    <label class="form-label d-block mb-3">
        <span class="required">{{ t('settings.current_password') }}</span>
        <input type="password" class="form-control mt-2" data-name="old_password" autocomplete="current-password"
            required>
    </label>

    <label class="form-label d-block mb-3">
        <span class="required">{{ t('settings.new_password') }}</span>
        <input type="password" class="form-control mt-2" data-name="new_password" minlength="{{ PASSWORD_MIN_LENGTH }}"
            autocomplete="new-password" required>
    </label>

    <label class="form-label d-block mb-3">
        <span class="required">{{ t('settings.new_password_repeat') }}</span>
        <input type="password" class="form-control mt-2" data-name="new_password_confirm"
            minlength="{{ PASSWORD_MIN_LENGTH }}" autocomplete="new-password" required>
    </label>

    <div class="row g-2 g-md-3 align-items-center">
        <div class="col-md">
            <div class="form-check ms-1">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="revoke_other_sessions" value="true"
                        autocomplete="off">
                    {{ t('settings.logout_from_browsers') }}
                </label>
            </div>
        </div>
        <div class="col-md-auto text-end">
            <a class="link-primary me-3" href="/reset-password">{{ t('sessions.new.lost password link') }}</a>
            <button class="btn btn-primary px-3" type="submit">
                {{ t('action.submit') }}
            </button>
        </div>
    </div>
</form>

<hr class="my-4">

<h3>{{ t('two_fa.two_factor_methods') }}</h3>
<p>{{ t('two_fa.secure_your_account_using_additional_verification_methods') }}</p>
<div class="table-responsive">
    <table class="table align-middle mb-0">
        <tbody>
            <tr>
                <td>
                    <i class="bi bi-fingerprint"></i>
                </td>
                <td>
                    <h6 class="d-flex align-items-center mb-0">
                        {{ t('two_fa.passkeys') }}
                        {% if passkeys %}
                        <span class="enabled-badge">{{ t('state.enabled') }}</span>
                        {% endif %}
                    </h6>
                    <p class="form-text mb-0">
                        {{ t('two_fa.sign_in_securely_with_biometrics_or_security_keys') }}
                    </p>
                    {% if passkeys %}
                    <ul class="metadata list-unstyled mt-0 mb-0">
                        {% for passkey in passkeys %}
                        <li class="passkey-entry">
                            {% set _date %}
                            <time datetime="{{ passkey.created_at.isoformat() }}" data-date="medium"
                                data-time="short"></time>
                            {% endset %}
                            {% if passkey.aaguid_info and passkey.aaguid_info.icon_light %}
                            <img class="passkey-icon-light align-text-top" src="{{ passkey.aaguid_info.icon_light }}"
                                alt="" width="16" height="16">
                            <img class="passkey-icon-dark align-text-top" src="{{ passkey.aaguid_info.icon_dark }}"
                                alt="" width="16" height="16">
                            {% else %}
                            <i class="bi bi-key-fill text-body"></i>
                            {% endif %}
                            <span class="passkey-name ms-1">{{ passkey.name }}</span>
                            <button class="btn btn-sm btn-link p-0 ms-1-5 passkey-rename-btn" type="button"
                                data-credential-id="{{ passkey.credential_id | b64 }}">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <span class="text-body-secondary mx-1-5">&mdash;</span>
                            {{- t('two_fa.added_on_date', date=_date) | safe -}}
                            <button class="btn btn-sm btn-link p-0 ms-1-5" type="button"
                                data-auth-action="/api/web/settings/passkey/{{ passkey.credential_id | b64 }}/remove"
                                data-title="{{ t('two_fa.remove_passkey') }}" data-bs-toggle="modal"
                                data-bs-target="#disableAuthMethodModal">
                                {{ t('action.remove') }}
                            </button>
                        </li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </td>
                <td class="text-end">
                    {% if passkeys | length < PASSKEY_LIMIT %}
                    <form class="add-passkey-form d-inline" method="POST" action="/api/web/settings/passkey/register">
                        <button class="btn btn-light border" type="submit">
                            {{ t('action.configure') }}
                        </button>
                    </form>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td>
                    <i class="bi bi-phone"></i>
                </td>
                <td>
                    <h6 class="d-flex align-items-center mb-0">
                        {{ t('two_fa.authenticator_app') }}
                        {% if totp_created_at %}
                        <span class="enabled-badge">{{ t('state.enabled') }}</span>
                        {% endif %}
                    </h6>
                    <p class="form-text mb-0">
                        {{ t('two_fa.require_code_from_your_mobile_authenticator_app_when_signing_in') }}</p>
                    {% if totp_created_at %}
                    <span class="metadata">
                        {% set _date %}
                        <time datetime="{{ totp_created_at.isoformat() }}" data-date="medium" data-time="short"></time>
                        {% endset %}
                        <i class="bi bi-clock-history me-1-5"></i>
                        {{- t('two_fa.configured_on_date', date=_date) | safe -}}
                    </span>
                    {% endif %}
                </td>
                <td class="text-end">
                    {% if totp_created_at %}
                    <button class="btn btn-light border" type="button" data-auth-action="/api/web/settings/totp/remove"
                        data-title="{{ t('two_fa.disable_authenticator_app') }}" data-bs-toggle="modal"
                        data-bs-target="#disableAuthMethodModal">
                        {{ t('action.disable') }}
                    </button>
                    {% else %}
                    <button class="btn btn-light border" type="button" data-bs-toggle="modal"
                        data-bs-target="#setupTotpModal">
                        {{ t('action.configure') }}
                    </button>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td>
                    <i class="bi bi-file-text"></i>
                </td>
                <td>
                    <h6 class="d-flex align-items-center mb-0">
                        {{ t('two_fa.recovery_codes') }}
                        {% if recovery_codes_status.num_remaining %}
                        <span class="enabled-badge">
                            {{ nt('two_fa.unused_codes_count', recovery_codes_status.num_remaining) }}
                        </span>
                        {% endif %}
                    </h6>
                    <p class="form-text mb-0">
                        {{ t('two_fa.access_your_account_if_you_lose_your_two_factor_authenticator') }}
                    </p>
                    {% if recovery_codes_status.num_remaining %}
                    <span class="metadata">
                        {% set _date %}
                        <time datetime="{{ recovery_codes_status.created_at.isoformat() }}" data-date="medium"
                            data-time="short"></time>
                        {% endset %}
                        <i class="bi bi-clock-history me-1-5"></i>
                        {{- t('two_fa.generated_on_date', date=_date) | safe -}}
                    </span>
                    {% endif %}
                </td>
                <td class="text-end">
                    <button class="btn btn-light border" type="button" data-bs-toggle="modal"
                        data-bs-target="#generateRecoveryCodesModal">
                        {% if recovery_codes_status.num_remaining %}
                        {{ t('action.regenerate') }}
                        {% else %}
                        {{ t('action.configure') }}
                        {% endif %}
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<hr class="my-4">

<h3>{{ t('settings.active_sessions') }}</h3>
<p>{{ t('settings.review_and_manage_your_active_login_sessions') }}</p>
<ul class="active-sessions list-unstyled mx-2">
    {% for session in active_sessions %}
    <li>
        <div class="row g-2 align-items-center">
            <div class="col-sm">
                <h6 class="mb-1">
                    {% if session.id == current_session_id %}
                    <span class="current-session me-1" data-bs-toggle="tooltip"
                        data-bs-title="{{ t('settings.this_is_your_current_session') }}"
                        aria-label="{{ t('settings.this_is_your_current_session') }}"></span>
                    {% endif %}
                    {% set id %}
                    <span class="session-id">
                        {{ str(session.id)[:5] }}
                        <i class="bi bi-three-dots"></i>
                        {{ str(session.id)[-7:] }}
                    </span>
                    {% endset %}
                    {{ t('settings.session_colon_id', id=id) | safe }}
                </h6>
                <p class="form-text mb-0">
                    {% set date %}
                    <time class="fw-medium" datetime="{{ session.authorized_at.isoformat() }}" data-date="long"
                        data-time="short"></time>
                    (<time datetime="{{ session.authorized_at.isoformat() }}" data-style="long"></time>)
                    {% endset %}
                    {{ t('settings.authorized_at', date=date) | safe }}
                </p>
            </div>
            <div class="col-sm-auto align-self-center text-end">
                <form class="revoke-token-form" method="POST" action="/api/web/settings/revoke-token">
                    <input type="hidden" name="token_id" value="{{ session.id }}">
                    <button class="btn btn-sm btn-light border" type="submit">
                        {{ t('action.end_session') }}
                    </button>
                </form>
            </div>
        </div>
    </li>
    {% endfor %}
</ul>

{% if not totp_created_at %}
{% include 'settings/_setup-totp-modal' %}
{% endif %}
{% include 'settings/_disable-auth-method-modal' %}
{% include 'settings/_generate-recovery-codes-modal' %}

{% endblock %}
