<div class="text-center mb-4">
    <img class="brand-img mb-2" src="/static/img/favicon/256.webp" alt="{{ t('alt.logo', name=t('project_name')) }}">
    <h4 class="modal-title">{{ t('login.welcome_back') }}</h4>
    <p class="form-text mt-0">
        {{ t('sessions.new.no account') }}
        <a href="/signup" class="link-primary">{{ t('sessions.new.register now') }}</a>
    </p>
</div>

<div class="auth-switcher mb-2">
    <div>
        <form class="login-form" method="POST" action="/api/web/user/login" data-login-state="credentials">
            <div data-section="credentials">
                <label class="form-label d-block mb-2">
                    {{ t('sessions.new.email or username') | capitalize }}
                    <input type="text" class="form-control mt-2" name="display_name_or_email"
                        autocomplete="username webauthn" autocapitalize="none" {% if ENV != 'prod' %}
                        data-bs-toggle="popover" data-bs-trigger="focus" data-bs-placement="top"
                        data-bs-title="Test Site Reminder"
                        data-bs-content="Use fake data only. Do not provide real email addresses. All emails go to mail.openstreetmap.ng"
                        {% endif %} required>
                </label>

                <label class="form-label d-block mb-3">
                    {{ t('sessions.new.password') }}
                    <input type="password" class="form-control mt-2" data-name="password"
                        autocomplete="current-password" required>
                </label>

                <div class="d-flex justify-content-between align-items-center mx-1 mb-3">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="remember" value="True"
                                autocomplete="off">
                            {{ t('sessions.new.remember') }}
                        </label>
                    </div>
                    <a class="link-primary small" href="/reset-password">
                        {{ t('sessions.new.lost password link') }}
                    </a>
                </div>
            </div>

            <div data-section="passkey">
                <p class="text-center text-body-secondary mb-3">
                    {{ t('two_fa.could_not_complete_passkey_verification') }}
                </p>
                <button class="btn btn-primary fw-medium w-100 mb-3" type="button" data-action="method-passkey">
                    <i class="bi bi-arrow-clockwise me-1-5"></i>
                    {{- t('two_fa.retry_passkey') -}}
                </button>
                <div class="text-center">
                    <button class="btn btn-link btn-sm p-0" type="button" data-action="another-method">
                        {{ t('two_fa.try_another_method') }}
                    </button>
                </div>
            </div>

            <div data-section="totp">
                <label class="form-label d-block mb-2">
                    {{ t('two_fa.enter_two_factor_code') }}
                    <p class="form-text">{{ t('two_fa.enter_the_one_time_code_from_your_app') }}</p>
                    <div class="totp-input-group d-flex justify-content-center gap-1">
                        <input type="text" class="form-control" maxlength="1" inputmode="numeric" pattern="[0-9]"
                            autocomplete="one-time-code">
                    </div>
                    <input type="hidden" name="totp_code">
                </label>
                <div class="text-center">
                    <button class="btn btn-link btn-sm p-0" type="button" data-action="another-method">
                        {{ t('two_fa.try_another_method') }}
                    </button>
                </div>
            </div>

            <div data-section="recovery">
                <label class="form-label d-block mb-2">
                    {{ t('two_fa.enter_recovery_code') }}
                    <p class="form-text">{{ t('two_fa.enter_one_of_your_recovery_codes') }}</p>
                    <input type="text" class="form-control form-control-lg" name="recovery_code" autocomplete="off"
                        autocapitalize="none" inputmode="text" maxlength="14">
                </label>
                <div class="text-center">
                    <button class="btn btn-link btn-sm p-0" type="button" data-action="another-method">
                        {{ t('two_fa.try_another_method') }}
                    </button>
                </div>
            </div>

            <div data-section="method-select">
                <p class="text-center text-body-secondary mb-3">
                    {{ t('two_fa.choose_how_to_verify') }}
                </p>
                <div class="list-group list-group-flush mb-3">
                    <button type="button" data-action="method-passkey"
                        class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3">
                        <i class="bi bi-fingerprint fs-4 text-secondary"></i>
                        <span class="flex-grow-1">
                            <strong class="d-block">{{ t('two_fa.passkeys') }}</strong>
                            <small class="text-body-secondary">{{ t('two_fa.use_biometrics_or_security_keys') }}</small>
                        </span>
                        <i class="bi bi-chevron-right text-body-tertiary"></i>
                    </button>
                    <button type="button" data-action="method-totp"
                        class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3">
                        <i class="bi bi-phone fs-4 text-secondary"></i>
                        <span class="flex-grow-1">
                            <strong class="d-block">{{ t('two_fa.authenticator_app') }}</strong>
                            <small
                                class="text-body-secondary">{{ t('two_fa.enter_the_code_from_your_authenticator_app') }}</small>
                        </span>
                        <i class="bi bi-chevron-right text-body-tertiary"></i>
                    </button>
                    <button type="button" data-action="method-recovery"
                        class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3">
                        <i class="bi bi-file-text fs-4 text-secondary"></i>
                        <span class="flex-grow-1">
                            <strong class="d-block">{{ t('two_fa.recovery_codes') }}</strong>
                            <small
                                class="text-body-secondary">{{ t('two_fa.use_one_of_your_saved_recovery_codes') }}</small>
                        </span>
                        <i class="bi bi-chevron-right text-body-tertiary"></i>
                    </button>
                    {% if ENV != 'prod' %}
                    <button type="button" data-action="method-bypass"
                        class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3">
                        <i class="bi bi-skip-forward fs-4 text-secondary"></i>
                        <span class="flex-grow-1">
                            <strong class="d-block">Bypass 2FA</strong>
                            <small class="text-body-secondary">This is a testing environment</small>
                        </span>
                        <i class="bi bi-chevron-right text-body-tertiary"></i>
                    </button>
                    <input type="hidden" name="bypass_2fa">
                    {% endif %}
                </div>
                <button class="btn btn-light border w-100" type="button" data-action="cancel-2fa">
                    {{ t('action.cancel') }}
                </button>
            </div>

            <div data-section="totp recovery">
                <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-light border" type="button" data-action="cancel-2fa">
                        {{ t('action.cancel') }}
                    </button>
                    <button class="btn btn-primary fw-medium flex-grow-1" type="submit">
                        {{ t('login.sign_in') }}
                    </button>
                </div>
            </div>
            <div data-section="credentials">
                <button class="btn btn-primary w-100 fw-medium" type="submit">
                    {{ t('login.sign_in') }}
                </button>
            </div>
        </form>

        <div class="divider my-3">
            <span class="divider-text">{{ t('login.or_continue_with') }}</span>
        </div>

        <button class="btn btn-light border w-100" type="button" data-action="passkey-login">
            <img class="dark-filter-invert" src="/static/img/brand/passkeys-black.webp"
                alt="{{ t('alt.passkey_icon') }}" draggable="false" loading="lazy">
            {{ t('login.sign_in_with_a_passkey') }}
        </button>
    </div>

    <div>
        {% set providers_action = 'login' %}
        {% set providers_include_referer = true %}
        {% include 'user/_providers' %}
    </div>

</div>

<div class="auth-switcher-cta">
    <button type="button" class="btn btn-link" data-auth-switcher-target="providers">
        <i class="bi bi-list me-1-5"></i>
        {{- t('auth_switcher.sign_in_with_a_provider') -}}
    </button>
    <button type="button" class="btn btn-link d-none" data-auth-switcher-target="email">
        <i class="bi bi-chevron-left small me-1"></i>
        {{- t('action.go_back') -}}
    </button>
</div>
