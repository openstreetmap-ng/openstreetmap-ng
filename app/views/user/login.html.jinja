{% extends '_base' %}
{% block title_prefix %}{{ t('login.sign_in') }} |{% endblock %}
{% block body_class %}login-body{% endblock %}
{% block body %}
  <div class="content-header"></div>
  <div class="content-body">
    <div class="container">
      <div
        class="modal position-static d-block"
        tabindex="-1"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header border-0"></div>
            <div class="login-body modal-body px-4 pt-0">
              {% include 'user/_login-body' %}
            </div>
            {% include 'user/_login-footer' %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
