{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "isolatedModules": true,
    "module": "ES2020",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2023",
    "types": [
      "@types/bootstrap",
      "@types/geojson",
      "@types/node",
      "typed-query-selector"
    ],
    "verbatimModuleSyntax": true
  },
  "exclude": ["app/views/lib/_generated/**/*", "app/views/lib/proto/**/*"],
  "include": ["app/views/**/**.ts"]
}
